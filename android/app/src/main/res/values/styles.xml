<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <item name="android:datePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Dialog.Theme</item>
        <item name="fontFamily">@font/comfortaareg</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        </style>

        <style name="SpinnerItem" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:textAlignment">gravity</item>
            <item name="android:gravity">start</item>
            <item name="android:fontFamily">@font/comfortaareg</item>
        </style>

        <style name="SpinnerDropDownItem" parent="Theme.AppCompat.Light.NoActionBar">
            <item name="android:textAlignment">gravity</item>
            <item name="android:gravity">start</item>
            <item name="android:textColor">#000000</item>
        </style> 

        <!-- Configuration for Dialog.theme. -->
        <style name="Dialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <!-- BackgroundColor of the date modal -->
        <item name="colorAccent">#d31cb0</item>
        <!-- Change textColor of the date modal -->
        <item name="android:textColorPrimary">#000000</item>
        </style>

</resources>
